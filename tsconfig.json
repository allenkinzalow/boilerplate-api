{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@app": ["./src/index.ts"],
      "@config": ["./src/config/dotenv.ts"],
      "@database": ["./src/database"],
      "@types": ["./src/types.ts"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src/**/*"]
}
